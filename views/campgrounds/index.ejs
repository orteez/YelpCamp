<%- include("../partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp</h1>
      <p>View our hand-picked campgrounds</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new"
          >Add New Campground</a
        >
      </p>
    </div>
  </header>

  <div class="row text-center" style="margin: auto 0; flex-wrap: wrap;">
    <% if(campgrounds.length == 0) { %>
    <div class="container">
      <h1 class="my-auto text-center">No camps found :(</h1>
    </div>
    <%} else { campgrounds.forEach( (camp) => { %>
    <div class="col-md-4 col-sm-6 my-2">
      <div class="card">
        <img class="card-img-top" src="<%= camp.img %>" alt="" />
        <div class="card-body">
          <h3><%= camp.name %></h3>
          <a
            class="btn btn-primary btn-large"
            href="/campgrounds/<%= camp._id %>"
            >Learn More</a
          >
        </div>
      </div>
    </div>
    <% })} %>
  </div>
</div>

<%- include("../partials/footer") %>
