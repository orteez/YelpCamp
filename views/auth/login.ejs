<%- include("../partials/header") %> 


<div class="container">
    <h1 class="text-center">Login!</h1>
    <div style="width: 30%; margin: 40px auto;">
      <form action="/login" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="username" placeholder="username">
        </div>
        <div class="form-group">
          <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" name="Login" id="">
        </div>
      </form> 
      <a class="btn btn-sm btn-warning" href="/">Go Back</a> 
      <a class="btn btn-sm btn-success float-right" href="/register">Sign Up</a> 
  </div>

</div>

