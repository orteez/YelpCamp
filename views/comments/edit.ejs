<%- include("../partials/header") %> 

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div style="width: 30%; margin: 40px auto;">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>/edit?_method=PUT" method="POST">
        <div class="form-group">
          <label><%= comment.author.username %> </label>
          <label>Comment:</label>
          <textarea class="form-control" type="text" name="comment[text]" >
            <%= comment.text %>
          </textarea>
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" name="" id="">
        </div>
      </form> 
      <a href="/campgrounds/<%= campground_id %> ">Go Back</a> 
    </div>
  </div>
</div>

<%- include("../partials/footer") %> 